<div class="container">
  <h1><%= @restaurant[:name] %></h1>
  <p>Address: <%= @restaurant[:address] %></p>
  <p>Phone: <%= @restaurant[:phone_number] %></p>
  <p>Category: <%= @restaurant[:category] %></p>
  <br>
  <br>
  <br>
  <br>
  <ul class="list-unstyled">
    <% @restaurant.reviews.each do |review| %>
      <li class="pt-5">Review: <%= review.content %> <br> Rating: <%= review.rating %></li>
    <% end %>
  </ul>
  <br>
  <br>
  <br>
  <br>
  <%= link_to 'Add a review', new_restaurant_review_path(@restaurant) %>
  <br>
  <br>
  <br>
  <br>
  <%= link_to "Back to all restaurants", restaurants_path  %>
</div>
